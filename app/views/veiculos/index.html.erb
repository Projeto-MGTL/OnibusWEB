<h1>Listing veiculos</h1>

<table>
  <tr>
    <th>Marca</th>
    <th>Modelo</th>
    <th>Placa</th>
    <th>Chassi</th>
    <th>Numerocadeiras</th>
    <th>Empresa</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @veiculos.each do |veiculo| %>
  <tr>
    <td><%= veiculo.marca %></td>
    <td><%= veiculo.modelo %></td>
    <td><%= veiculo.placa %></td>
    <td><%= veiculo.chassi %></td>
    <td><%= veiculo.numerocadeiras %></td>
    <td><%= veiculo.empresa.nome %></td>
    <td><%= link_to 'Show', veiculo %></td>
    <td><%= link_to 'Edit', edit_veiculo_path(veiculo) %></td>
    <td><%= link_to 'Excluir', veiculo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

